@model ERPOLD.Models.TBCUSTOMER

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "CustomerIndex";
}

<h2>CustomerIndex</h2>

@using (Html.BeginForm("CustomerSaveChanges", "Customer", FormMethod.Post))
{

    <table>
        @Html.HiddenFor(x => x.CustomerId)
        <tr>
            <td>Name</td>
            <td>
                @Html.TextBoxFor(x => x.Name)
            </td>
        </tr>
        <tr>
            <td>Phone No</td>
            <td>
                @Html.TextBoxFor(x => x.PhoneNo)
            </td>
        </tr>

        <tr>
            <td></td>
            <td>
                @if (Model == null)
                {
                    <input type="submit" value="Create" class="btn btn-default" />
                }
                else
                {
                    <input type="submit" value="Update" class="btn btn-default" />
                }
                <input id="btn1" class="btn btn-default" type="button" name="name" value="Hide/Show " />

            </td>
        </tr>
    </table>
}

<table id="tbl1" style="display:none" class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Phone No
        </th>

    </tr>

    @foreach (var item in ViewBag.CustomerList)
    {
        <tr>

            <td>
                @item.Name
            </td>
            <td>
                @item.PhoneNo
            </td>

            <td>
                @Html.ActionLink("Edit", "EditPurchaseHeader", new { id = item.CustomerId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CustomerId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId })
            </td>
        </tr>
    }

</table>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#btn1").click(function () {
            if ($('#tbl1').css('display') == 'block') {
                $("#tbl1").css('display', 'none')
            }
            else {
                $("#tbl1").css('display', 'block')
            }
        });
    })

</script>
