@model ERPOLD.Models.ViewModel.Stockreport
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "STOCK REPORT";
}

<h2>Stock Report</h2>
@using (Html.BeginForm("Stock", "Reports", FormMethod.Post))
{
<table><tr>
    <td>Item</td>
    <td>
        @Html.DropDownListFor(x => x.ITEMID, (SelectList)ViewBag.ItemIdList, "-Select-")
    </td>
    <td></td>
           <td>DateFrom</td>
           <td>
               <input id="DateFrom" name="DateFrom" placeholder="DD/MM/YYYY" type="text" value="">
           </td>
           <td></td>
           <td>DateTo</td>
           <td>
               <input id="DateTo" name="DateTo" placeholder="DD/MM/YYYY" type="text" value="">
           </td>
    <td></td>
           <td></td>
    <td><input id="goButton" type="button" name="name" value="GO" /></td>
</tr></table>
}
<br />
<br />
<table class="table" id="tbl1" border="1px">
    <tr>
        <th>
            S.No.
        </th>
        <th>
          Item Name
        </th>
        <th>
          Size
        </th>

        <th>
          Purchase Qty
        </th>
        <th>
          Sale Qty
        </th>
        <th>
          Closing Stock
        </th>
       

    </tr>
    @{var i=1;}
    @foreach (var item in ViewBag.lstStock)
    {
        <tr>
            <td>
               @i
            </td>
            <td>
                @item.ITEMNAME
            </td>
            <td>
              @item.SIZE
            </td>

            <td>
                @item.PURCHASEQTY
            </td>
            <td>
               @item.SALEQTY
            </td>

            <td>
               @item.CLOSINGSTOCK
            </td>
           
            @{i += 1;
    }

         
        </tr>
    }

</table>
<script>
    $(document).ready(function () {
        $("#goButton").click(function () {
           
        });
    });
</script>


