@model ERPOLD.Models.TBBALANCESHEETGROUP

@{
    ViewBag.Title = "BALNACESHEETGROUP";
}

<div class="sale">
    <div class="container">
        <div class="row">
            <div class="saleheading"><h2>BALNACE SHEET GROUP</h2></div>

            @using (Html.BeginForm("BALNACESHEETGROUPSaveChanges", "Inventory", FormMethod.Post))
            {

                <table class="saletablesaledate">
                    @Html.HiddenFor(model => model.BALANCESHEETGRPID)
                    <tr>
                        <td>Name</td>
                        <td>@Html.TextBoxFor(x => x.BALANCESHEETGROUPNM)</td>
                    </tr>
                    <tr>
                        <td>Type</td>
                        <td>@Html.TextBoxFor(x => x.BALANCESHEETGROUPTYPE)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            @if (Model == null)
                            {
                                <input type="submit" value="Create" class="btn btn-default" />
                            }
                            else
                            {
                                <input type="submit" value="Update" class="btn btn-default" />
                            }
                            <input id="btn1" class="btn btn-default" type="button" name="name" value="Hide/Show " />

                            <a class="btn btn-default" href='@Url.Action("Index", "Inventory")'>Back </a>

                        </td>
                    </tr>
                </table>
            }

            <table id="tbl1" style="display:none" class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Type
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in ViewBag.BalanceList)
                {
                    <tr>
                        <td>
                            @item.BALANCESHEETGROUPNM
                        </td>

                        <td>
                            @item.BALANCESHEETGROUPTYPE
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditBALNACESHEETGROUP", new { id = item.BALANCESHEETGRPID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.BALANCESHEETGRPID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.BALANCESHEETGRPID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#btn1").click(function () {
            if ($('#tbl1').css('display') == 'block') {
                $("#tbl1").css('display', 'none')
            }
            else {
                $("#tbl1").css('display', 'block')
            }
        });
    })

</script>
