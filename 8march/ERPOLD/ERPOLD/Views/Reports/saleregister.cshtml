@model ERPOLD.Models.ViewModel.SaleRegister
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SALE REPORT";
}

<h2>Sale Register Summary</h2>
@using (Html.BeginForm("SaleRegister", "Reports", FormMethod.Post))
{
<table><tr>
    <td>Item</td>
    <td>
        @Html.DropDownListFor(x => x.Accountid, (SelectList)ViewBag.accountidList, "-Select-")
    </td>
    <td></td>
           <td>DateFrom</td>
           <td>
               <input id="DateFrom" name="DateFrom" placeholder="DD/MM/YYYY" type="text" value="">
           </td>
           <td></td>
           <td>DateTo</td>
           <td>
               <input id="DateTo" name="DateTo" placeholder="DD/MM/YYYY" type="text" value="">
           </td>
    <td></td>
           <td></td>
    <td><input id="goButton" type="button" name="name" value="GO" /></td>
</tr></table>
}
<br />
<br />
<table class="table" id="tbl1" border="1px">
    <tr>
        <th>
            S.No.
        </th>
        <th>
          Account Name
        </th>
        <th>
          Bill Date
        </th>

        <th>
          Bill No
        </th>
        <th>
         Payment Mode
        </th>
        <th>
         Bill Amount
        </th>
       

    </tr>
    @{var i = 1; }
    @{var j = 0.0;}
    @foreach (var item in ViewBag.LSTSALE)
    {
        <tr>
            <td>
               @i
            </td>
            <td>
                @item.ACCOUNTNAME
            </td>
            <td>
              @item.BILLDATE
            </td>

            <td>
                @item.BILLNO
            </td>
            <td>
               @item.PAYMENTMODE
            </td>

            <td align="right">
                @item.BILLAMOUNT
            </td>
           
            @{i += 1; 
    }
            @{j = Convert.ToDouble(item.BILLAMOUNT);}

         
        </tr>

     
    }
    <tr><td colspan="5" align="right">Total:</td><td align="right">@j</td></tr>
</table>

<script>
    $(document).ready(function () {
        $("#goButton").click(function () {
           
        });
    });
</script>


